<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ChooseActivity"
    android:gravity="center|top" >

    <!-- <Button
        android:id="@+id/chooseGallery"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_gallery"
        android:layout_below="@id/capturedImage" /> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:ignore="UselessParent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/capturedImage"
                android:background="@drawable/view1"
                android:contentDescription=""
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/textView1"
                android:layout_marginTop="100dp" />

            <TextView
                android:text="Take first imgae"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hint1"
                android:textSize="36sp"
                android:textStyle="normal|bold"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.SearchResult.Title"
                android:fontFamily="sans-serif-medium"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >
            <ImageView android:id="@+id/capturedImage2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/view2"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" />

            <TextView
                android:text="Take imgae2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hint2"
                android:textSize="36sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textStyle="normal|bold"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.SearchResult.Title"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:gravity="right"
                android:layout_marginTop="100dp" />

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>