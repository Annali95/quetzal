<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quetzal"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme">
        <activity
            android:name=".Activities.WelcomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.ChooseActivity" />
        <activity
            android:name=".Activities.FingerPaint"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Activities.CameraActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".recognize.LearnActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".Activities.MenuActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".Activities.conversation"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_conversation"></activity>
    </application>

</manifest>